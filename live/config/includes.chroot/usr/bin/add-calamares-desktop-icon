#!/bin/sh
# Creates an "Install Ceubos" icon on the live session tested with:
# Xfce, LXDE, LXqt, Gnome, KDE, Mate, Cinnamon


# Create ~/Desktop just in case this runs before the xdg folder
# creation script.


# Among the Debian desktop environments, LXDE is the only one
# that behaves completely different.
if [ -f /usr/bin/lxsession ]; then
    echo "[Desktop Entry]" > ~/ceubos/install-ceubos.desktop
    echo "Type=Link" >> ~/ceubos/install-ceubos.desktop
    echo "Name=Install CeubOs" >> ~/cebubos/install-ceubos.desktop
    echo "Icon=install-ceubos" >> ~/ceubos/install-ceubos.desktop
    echo "URL=/usr/share/applications/install-ceubos.desktop" \
          >> ~/ceubos/install-ceubos.desktop
else
    cp /usr/share/applications/install-ceubos.desktop ~/ceubos/
    # Xfce needs this executable otherwise it complains, everything
    # else doesn't seem to care either way.
    chmod +x ~/ceubos/install-ceubos.desktop
fi
