#!/bin/bash
#requires plymouth-x11 installed
#sudo apt-get install plymouth-x11
echo
echo "Running 5-second debug test..."
echo "Creates /lib/plymouth/themes/debian/debug.log for debugging"
sudo plymouthd --debug --debug-file=/lib/plymouth/themes/debian/debug.log; sudo plymouth --show-splash ; for ((I=0; I<30; I++)); do sleep 1 ; sudo plymouth --update=test$I ; done ; sudo plymouth --quit
exit
