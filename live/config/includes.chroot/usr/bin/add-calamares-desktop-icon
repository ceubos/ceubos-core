#!/bin/sh
# Creates an "Install EducatuX" icon on the live session tested with:
# Xfce, LXDE, LXqt, Gnome, KDE, Mate, Cinnamon


# Create ~/Desktop just in case this runs before the xdg folder
# creation script.


# Among the Debian desktop environments, LXDE is the only one
# that behaves completely different.
if [ -f /usr/bin/lxsession ]; then
    echo "[Desktop Entry]" > ~/install-ceubos.desktop
    echo "Type=Link" >> ~/install-ceubos.desktop
    echo "Name=Install CeubOs" >> ~/install-ceubos.desktop
    echo "Icon=install-ceubos" >> ~/install-ceubos.desktop
    echo "URL=/usr/share/applications/install-ceubos.desktop" \
          >> ~/Desktop/install-ceubos.desktop
else
    cp /usr/share/applications/install-ceubos.desktop ~/Desktop
    # Xfce needs this executable otherwise it complains, everything
    # else doesn't seem to care either way.
    chmod +x ~/Desktop/install-ceubos.desktop
fi
